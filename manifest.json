{
	"name": "Speedier",
	"description": "Watching videos, but even faster!",
	"homepage_url": "https://github.com/Berted/speedier",
	"version": "1.0",
	"manifest_version": 3,
	"permissions": ["storage"],
    "host_permissions": ["<all_urls>"],
	"action":{
		"default_popup": "popup.html",
		"default_icon":{
			"16": "/images/speedier16.png",
			"32": "/images/speedier32.png",
			"48": "/images/speedier48.png",
			"128": "/images/speedier128.png"
		}
	},
    "content_scripts":[
		{
			"run_at": "document_end",
			"matches": ["<all_urls>"],
			"js": ["background.js"]
		}
	]
}